{% extends 'base.html.twig' %}
{% block meta %}
	  <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block title %}Connexion flower family
{% endblock %}

{% block body %}
<!-- ======= Breadcrumbs ======= -->
	<section id="breadcrumbs" class="breadcrumbs ">
		<div class="container">

			<div class="d-flex justify-content-end align-items-center">
				<ol class="mt-4">
					<li>
						<a href="{{path('home')}}">Accueil</a>
					</li>
					<li>Authentification</li>
				</ol>
			</div>

		</div>
	</section>
	<!-- End Breadcrumbs -->
	<section  class=" mt-5">
		<div class="container">
			<div class="section-title" data-aos="fade-up">
				<h1>Authentification
				</h1>
			</div>
			<div data-aos="fade-up">
				
				<div class="mb-5 text-center">
					
					<button class="auth"> 
						<i class="bi bi-google"></i><a href="{{path('connect_google_start')}}" class="ms-4  text-decoration-none text-dark "> Se connecter avec Google</a>
					</button><br/>
					<button class="mt-3 auth"> 
						<i class="bi bi-facebook"></i><a href="{{path('connect_facebook_start')}}" class="ms-2  text-decoration-none text-dark">Se connecter avec Facebook</a>
					</button >
				</div>
				<div class="d-flex justify-content-center fs-4 ">
					<p >Ou créer un compte </p>
				</div>
			</div>
			<div class="row mt-5 justify-content-center" data-aos="fade-up">
				<div class="col-lg-10">
					<form method="post" class="form">
					
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								Vous êtes connecter en tant que
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Déconnexion</a>
							</div>
						{% endif %}

						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" class="form-control" autocomplete="email" required autofocus>

						<input type="password" name="password" id="inputPassword" placeholder="mot de passe" class="form-control" autocomplete="current-password" required>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						See https://symfony.com/doc/current/security/remember_me.html#}
						{#<div class="checkbox mb-3 mt-3">
							<label>
								<input type="checkbox" name="_remember_me" >
								Se souvenir de moi
							</label>
						</div>#}
						<div class="form-check mb-3 mt-3">
						<input class="form-check-input" type="checkbox"  id="remember-me" name="_remember_me">
							<label class="form-check-label" for="remember-me">
								Se souvenir de moi
							</label>
						</div>
						<p class="text-center mt-2">Vous avez pas encore de compte?
							<a href="{{path('registration')}}" >Inscrivez vous</a>
						</p>
						<p class="text-center">
							<a href="{{path('reset_password')}}" >Mot de passe oublié?</a>
						</p>

						<div class="text-center">
							<button class="mt-3" type="submit">
								Connexion
							</button>
						</div>
					</form>
				</div>

			</div>
		</div>
	</section>
{% endblock %}
