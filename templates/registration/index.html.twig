{% extends 'base.html.twig' %}
{% block meta %}
	  <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block title %}Inscription flower family
{% endblock %}

{% block body %}
	<!-- ======= Breadcrumbs ======= -->
	<section id="breadcrumbs" class="breadcrumbs ">
		<div class="container">

			<div class="d-flex justify-content-end align-items-center">
				<ol class="mt-4">
					<li>
						<a href="{{path('home')}}">Accueil</a>
					</li>
					<li>Inscription</li>
				</ol>
			</div>

		</div>
	</section>
	<!-- End Breadcrumbs -->
	<section id="contact" class="contact mt-5">
		<div class="container">
			<div class="section-title mt-5" data-aos="fade-up">
				<h1>Inscription</h1>
			</div>


			<div class="row mt-5 justify-content-center" data-aos="fade-up">

				<div class="col-lg-7 form">
					{{form_start(form)}}
					<div class="row">
						<div class="col-md-6 form-group">
							{{ form_row(form.firstName,{'label':false,'attr':{'placeholder':"Votre prénom",'class':'form-control'}})}}
						</div>
						<div class="col-md-6 form-group mt-3 mt-md-0">
							{{ form_row(form.lastName,{'label':false,'attr':{'placeholder':"Votre nom",'class':'form-control'}})}}
						</div>
					</div>
					<div class="form-group mt-3">
						{{ form_row(form.email,{'label':false,'attr':{'placeholder':"Votre email",'class':'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						<p>Votre mot de passe doit contenir au moins une lettre majuscule une lettre miniscule et un caractère spécial</p>
						{{ form_row(form.password,{'label':false,'attr':{'placeholder':"Votre mot de passe ",'class':'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						{{ form_row(form.confirmPassword,{'label':false,'attr':{'placeholder':" Confirmer votre mot de passe ",'class':'form-control'}})}}
					</div>
					
					<div class="form-check d-flex justify-content-start">
					
						{{ form_row(form.agreeTerms,{'label':false,'attr':{'class':'form-check-input ','id':'flexCheckChecked'}})|raw}}
                     <label for="{{form.agreeTerms.vars.id}}" >J'ai lu et accépté  <a href="{{path('cgv')}}" class="green" target="_blank"> les CGV </a>et <a href="{{path('privacy_policy')}}" class="green" target="_blank">la politique de confidentialité</a></label>
					</div>
					<div class="error-message">{{message}}</div>
					<div class="text-center mt-3">
						{{ form_row(form.submit,{'label':'Valider','attr':{'class':'col-md-3 customButton'}})}}
					</div>


					{{form_end(form)}}

				</div>

			</div>

		</div>
	</section>
	<!-- End Contact Section -->

{% endblock %}
{% block javascripts %}

	<script>

		let errorMessage = document.querySelector('.error-message')
let formCheckInput = document.querySelector('.form-check-input')
let formCheckLabel = document.querySelector('.form-check-label')
console.log(errorMessage)
if ({{ errors }}) {
formCheckLabel.style.color = 'red'
formCheckInput.style.borderColor = 'red'
errorMessage.style.display = 'block'
}
	</script>


{% endblock %}
