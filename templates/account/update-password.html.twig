{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe
{% endblock %}

{% block body %}
	<section id="contact" class="contact mt-5">
		<div class="container">
			<div class="section-title mt-5" data-aos="fade-up">
				<h1>Modification de mot de passe</h1>
			</div>


			<div class="row mt-5 justify-content-center" data-aos="fade-up">

				<div class="col-lg-8  php-email-form">
					{{form_start(form)}}
					<div class="row">

						<div class="col-md-6 form-group">

							{{ form_row(form.firstName,{'label':false,'attr':{'placeholder':"Votre prénom",'class':'form-control'}})}}
						</div>
						<div class="col-md-6 form-group mt-3 mt-md-0">
							{{ form_row(form.lastName,{'label':false,'attr':{'placeholder':"Votre nom",'class':'form-control'}})}}
						</div>
					</div>
					<div class="form-group mt-3">
						{{ form_row(form.email,{'label':false,'attr':{'placeholder':"Votre email",'class':'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						<p>Votre mot de passe doit contenir au moins une lette majuscule une lettre miniscule et un caractère spécial</p>
						{{ form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Votre mot de passe actuel",'class':'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						{{ form_row(form.newPassword,{'label':false,'attr':{'placeholder':" Votre nouveau mot de passe ",'class':'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						{{ form_row(form.confirmNewPassword,{'label':false,'attr':{'placeholder':" Confirmer votre nouveau mot de passe ",'class':'form-control'}})}}
					</div>
					<div class="text-center mt-3">
						{{ form_row(form.submit,{'label':'Valider','attr':{'class':'col-md-3 customButton'}})}}
					</div>


					{{form_end(form)}}

				</div>

			</div>

		</div>
	</section>
	<!-- End Contact Section -->

{% endblock %}
