{% extends 'base.html.twig' %}

{% block title %}Détails de commande
{% endblock %}

{% block body %}
	<main
		id="main">

		<!-- ======= Breadcrumbs ======= -->
		<section id="breadcrumbs" class="breadcrumbs">
			<div class="container">

				<div class="d-flex justify-content-end align-items-center">
					<ol class="mt-4">
						<li>
							<a href="{{path('home')}}">Accueil</a>
						</li>
						<li>Détails de ma commande</li>
					</ol>
				</div>

			</div>
		</section>
		<!-- End Breadcrumbs -->

		<!-- ======= Contact Section ======= -->


		<section id="contact" class="contact">
			<div class="container ">
				<div class="section-title " data-aos="fade-up">
					<h1>Détails de ma commande</h1>

				</div>
				<div id="pageContent">
					<div class="row  mt-5 justify-content-center" data-aos="fade-up">
						<div class="col-lg-8 col-11">
							<div class="card text-center">
								
								{% set total= null %}
								{% set totalProduct= null %}
								<div class="card-body cart">
										<table class="table">
											<thead>
												<tr>
													<th scope="col">Produit</th>
													<th scope="col">Prix unitaire</th>
													<th scope="col">Quantité</th>
													<th scope="col">total</th>
													<th scope="col" class="d-none d-md-block">Commentaire</th>

												</tr>
											</thead>
											<tbody>
											
												{% for orderDetail in orderDetails %}
													<tr>
														<td scope="row d-flex flex-row justify-content-center align-items-center">
															<div>
																{{orderDetail.product.name}}
																<br>{{orderDetail.specification}}
															</div>
														</td>
														<td>{{((orderDetail.price)/100)|number_format(2)}} €</td>
														<td>
															<div class="border border-light">

																<div>
																	{{orderDetail.quantity}} 
																</div>

															</div>
														</td>
														<td>{{((orderDetail.total)/100)|number_format(2)}} €</td>
														<td><button class="d-flex  align-items-center"><i class="bi bi-chat-right-text-fill text-black me-2"></i><a href="{{path('comment_product',{'slug':orderDetail.product.slug})}}" class="d-none d-md-block">Commenter le produit</a></button></td>
														
													</tr>
												{% endfor %}
											</tbody>
										</table>

								</div>
							</div>
						</div>
					
					</div>
				</div>
				<div id="response" class="text-center"></div>
			</div>
		</section>
		<!-- End Contact Section -->

	</main>
	<!-- End #main -->
{% endblock %}
